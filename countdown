#!/usr/bin/env python3
import sys
from datetime import datetime, date

# Check if exactly one argument is provided
if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} <yymmdd>")
    sys.exit(1)

input_str = sys.argv[1]

# Validate and parse the input date
try:
    # Parse the input string to a datetime object using format 'yymmdd'
    target_date = datetime.strptime(input_str, "%y%m%d").date()
except ValueError:
    print("Invalid date format. Use yymmdd, e.g., 251219 for 2025-12-19.")
    sys.exit(1)

# Get today's date
today = date.today()

# Calculate the number of days between today and the target date
delta_days = (target_date - today).days

# Display the result
if delta_days > 0:
    print(f"{delta_days} day(s) remaining until {target_date.isoformat()}.")
elif delta_days == 0:
    print(f"Today is the day! ({target_date.isoformat()})")
else:
    print(f"The date {target_date.isoformat()} has already passed ({-delta_days} day(s) ago).")
