#!/usr/bin/env python3
import sys

# Check if at least one argument (URL) is provided
if len(sys.argv) < 2:
    print(f"Usage: {sys.argv[0]} <URL> [filename]")
    sys.exit(1)

# Assign variables from arguments
url = sys.argv[1]                      # First argument is the URL
filename = sys.argv[2] if len(sys.argv) > 2 else "web"  # Default filename is 'web' if not provided

# Create and write to the .url file
with open(f"{filename}.url", "w") as f:
    f.write("[InternetShortcut]\n")
    f.write(f"URL={url}\n")

# Notify the user that the file has been created
print(f"{filename}.url file has been created.")
